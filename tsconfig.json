{
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "outDir": "./dist",
    "baseUrl": ".",
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "declaration": true,
    "module": "esnext",
    "esModuleInterop": true,
    "typeRoots": ["typings"],
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "rollup.config.js"]
}
